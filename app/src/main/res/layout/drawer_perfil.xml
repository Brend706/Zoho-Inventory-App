<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Header del perfil -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:paddingBottom="24dp"
        android:background="@color/morado_suave"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mis Datos"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="12dp" />
    </LinearLayout>

    <!-- Scroll para el contenido -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Nombre -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textSize="12sp"
                android:textColor="@color/morado_oscuro"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/tvPerfilNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cargando..."
                android:textSize="16sp"
                android:textColor="@color/black"
                android:padding="12dp"
                android:layout_marginTop="4dp" />

            <!-- Correo -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Correo Electr贸nico"
                android:textSize="12sp"
                android:textColor="@color/morado_oscuro"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/tvPerfilCorreo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cargando..."
                android:textSize="16sp"
                android:textColor="@color/black"
                android:padding="12dp"
                android:layout_marginTop="4dp" />

            <!-- Rol -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rol"
                android:textSize="12sp"
                android:textColor="@color/morado_oscuro"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/tvPerfilRol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cargando..."
                android:textSize="16sp"
                android:textColor="@color/black"
                android:padding="12dp"
                android:layout_marginTop="4dp" />

            <!-- Sucursal -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sucursal Asignada"
                android:textSize="12sp"
                android:textColor="@color/morado_oscuro"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/tvPerfilSucursal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cargando..."
                android:textSize="16sp"
                android:textColor="@color/black"
                android:padding="12dp"
                android:layout_marginTop="4dp" />

            <!-- C贸digo de Usuario -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C贸digo de Usuario"
                android:textSize="12sp"
                android:textColor="@color/morado_oscuro"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/tvPerfilCodigo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cargando..."
                android:textSize="16sp"
                android:textColor="@color/black"
                android:padding="12dp"
                android:layout_marginTop="4dp" />

        </LinearLayout>
    </ScrollView>

    <!-- Bot贸n Cerrar -->
    <Button
        android:id="@+id/btnCerrarPerfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cerrar"
        android:backgroundTint="@color/morado_suave"
        android:textColor="@color/white"
        android:layout_marginTop="16dp" />

</LinearLayout>