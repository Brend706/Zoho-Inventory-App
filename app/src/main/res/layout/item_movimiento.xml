<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardElevation="5dp"
    app:cardCornerRadius="12dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp"
        android:background="@color/morado_claro">

        <!-- FILA SUPERIOR: Tipo + Bot贸n Eliminar -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/txtTipo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tipo: ENTRADA"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="@color/black"/>

            <!-- Bot贸n Eliminar -->
            <ImageButton
                android:id="@+id/btnEliminar"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@android:drawable/ic_menu_delete"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Eliminar movimiento"
                app:tint="@color/morado_oscuro2"/>
        </LinearLayout>

        <!-- Cantidad -->
        <TextView
            android:id="@+id/txtCantidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cantidad: 0"
            android:textSize="15sp"
            android:layout_marginTop="6dp"
            android:textColor="@color/morado_oscuro2"/>

        <!-- Sucursal -->
        <TextView
            android:id="@+id/txtSucursal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sucursal: -"
            android:textSize="15sp"
            android:layout_marginTop="2dp"
            android:textColor="@color/black"/>

        <!-- Motivo -->
        <TextView
            android:id="@+id/txtMotivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Motivo: -"
            android:textSize="15sp"
            android:layout_marginTop="3dp"
            android:textColor="@color/cardview_dark_background"/>

        <!-- Fecha de Fabricaci贸n -->
        <TextView
            android:id="@+id/txtFechaFabricacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fabricaci贸n: -"
            android:textSize="14sp"
            android:layout_marginTop="6dp"
            android:textColor="@color/morado_oscuro"/>

        <!-- Fecha de Vencimiento -->
        <TextView
            android:id="@+id/txtFechaVencimiento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vencimiento: -"
            android:textSize="14sp"
            android:layout_marginTop="2dp"
            android:textStyle="bold"
            android:textColor="@color/morado_oscuro2"/>

        <!-- Fecha de Movimiento -->
        <TextView
            android:id="@+id/txtFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha movimiento: -"
            android:textSize="14sp"
            android:layout_marginTop="6dp"
            android:textStyle="bold"
            android:textColor="@color/morado_oscuro"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>
