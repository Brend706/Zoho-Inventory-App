<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="10dp"
    app:cardElevation="6dp"
    app:cardCornerRadius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp"
        android:background="@color/morado_claro">

        <!-- Nombre del Producto -->
        <TextView
            android:id="@+id/tvNombreProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre del Producto"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <!-- Sucursal -->
        <TextView
            android:id="@+id/tvNombreSucursal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sucursal: N/A"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:textColor="@color/black"/>

        <!-- Stock -->
        <TextView
            android:id="@+id/tvStockActual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stock: 0"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:textColor="@color/morado_suave"/>

        <TextView
            android:id="@+id/tvUltimaActualizacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Actualizado: 00/00/0000"
            android:textColor="@color/morado_oscuro2"
            android:textSize="12sp"
            android:layout_marginTop="4dp"/>

        <!-- Botones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="14dp">

            <!-- botÃ³n Ver Movimientos -->
            <Button
                android:id="@+id/btnVer"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Ver Movimientos"
                android:textSize="14sp"
                android:backgroundTint="@color/morado_suave"
                android:textColor="@color/white"
                android:layout_marginEnd="12dp"/>

            <!-- Editar -->
            <ImageButton
                android:id="@+id/btnEditar"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@android:drawable/ic_menu_edit"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Editar"
                android:layout_marginEnd="8dp"
                app:tint="@color/morado_oscuro"/>

            <!-- Eliminar -->
            <ImageButton
                android:id="@+id/btnEliminar"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@android:drawable/ic_menu_delete"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Eliminar"
                app:tint="@color/morado_oscuro2"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
